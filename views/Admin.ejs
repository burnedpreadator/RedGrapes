<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row upload-form">
        <%- include('./partials/flash.ejs') %>
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;" class="form-container">
            <form action="/show" method="post" novalidate class="validate-form" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <label for="title" class="form-label">Title</label>
                    <input class="form-control" type="text" name="title" placeholder="title">
                </div>
                <div class="form-group mt-2">
                    <label for="description" class="form-label">Description</label>
                    <input class="form-control" type="text" name="desc" placeholder="description">
                </div>
                <div class="form-group mt-2">
                    <input class="mt-2" type="file" name="workImage" >
                </div>
                <div class="form-group mt-5">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <div class="logout-btn-container">
               <a class="btn btn-lg btn-dark btn-block" href="/logout">logout!</a>
               <a style="cursor: pointer;" class="p-5 mt-5" href="/show"><p>Go to show page</p></a> 
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>