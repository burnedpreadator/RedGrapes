<%- include('./partials/header.ejs') %>
<%- include('./partials/flash.ejs') %>
    <div class="form">
        <div class="form-items contact-image"><img class="image" src="https://images.unsplash.com/photo-1553096442-8fe2118fb927?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=687&q=80" alt=""></div>
        <div class="form-items" id="contact-form">
            <form class="contact-form">
                <input class="text-input" type="text" id="first-name" placeholder="First Name">
                <input class="text-input" type="text" id="last-name" placeholder="Last Name">
                <input class="text-input" type="text" id="email" placeholder="Email">
                <input class="text-input" type="text" id="website" placeholder="Website">
                <input class="text-input" type="text" id="phone" placeholder="Phone">
                <input class="text-input" type="text" id="company" placeholder="Company">
                <textarea type="text" id="project-description" rows="4" placeholder="Message" cols="50"></textarea></br>
                <div class="selector-submit">
                    <div class="selectors">
                        <div class="select-box">
                            <div class="budget-container">
                                <div class="option-budget dropdown-item">
                                    <input type="radio" class="radio" name="category" id="5-25k" />
                                    <label for="5-25k">5-25k</label>
                                </div>
                                <div class="option-budget dropdown-item">
                                    <input type="radio" class="radio" name="category" id="25-50k" />
                                    <label for="25-50k">25-50k</label>
                                </div>
                                <div class="option-budget dropdown-item">
                                    <input type="radio" class="radio" name="category" id="50-100k" />
                                    <label for="50-100k">50-100k</label>
                                </div>
                                <div class="option-budget dropdown-item">
                                    <input type="radio" class="radio" name="category" id="100-200k" />
                                    <label for="100-200k">100-200k</label>
                                </div>
                                <div class="option-budget dropdown-item">
                                    <input type="radio" class="radio" name="category" id="200k+" />
                                    <label for="200k+">200k+</label>
                                </div>
                            </div>
                            <div class="btn btn-outline-secondary dropdown-toggle selected">
                                Budget
                            </div>
                        </div>
                        <div class="select-box">
                            <div class="Timeline-container">
                                <div class="option-Timeline">
                                    <input type="radio" class="radio" name="category" id="1-3 months" />
                                    <label for="1-3 months">1-3 months</label>
                                </div>
                                <div class="option-Timeline">
                                    <input type="radio" class="radio" name="category" id="3-6 months" />
                                    <label for="3-6 months">3-6 months</label>
                                </div>
                                <div class="option-Timeline">
                                    <input type="radio" class="radio" name="category" id="6+ months" />
                                    <label for="6+ months">6+ months</label>
                                </div>
                            </div>
                            <div class="btn btn-outline-secondary dropdown-toggle Timeline">
                                Timeline
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Send Message">
                </div>
            </form>
        </div>
    </div>

    <script type="text/JavaScript" src="./js/contact.js"></script>

    <%- include('./partials/footer.ejs') %>